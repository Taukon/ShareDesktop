{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",

    "rootDir": "./src",
    "outDir": "./dist",

    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}