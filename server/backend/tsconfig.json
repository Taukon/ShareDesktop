{
  "compilerOptions": {
    "target": "es2020",
    //"module": "commonjs",
    "module": "ESNext",
    "lib": [
      "es2020"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
  },
  
  //"files": [
    //"./lib/class.ts",
    //"./app/app.ts",
    //"./app_no_audio/app_no_audio.ts"
  //],
  "include": [
    "app/**/*",
    "app_no_audio/**/*",
    "lib/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compileOnSave": false
}